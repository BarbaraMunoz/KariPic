<section class="portfolio">
    <div class="container">
        <h1 class="section-title py-5">Capturando Instantes</h1>
        <% if user_signed_in? && current_user.admin? %>
            <%= link_to 'Nueva PublicaciÃ³n', new_karina_photo_path, class: "btn btn-gradient mt-2 mb-5" %>
